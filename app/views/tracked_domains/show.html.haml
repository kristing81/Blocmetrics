.container
  %h3.col.md-6= @tracked_domain.name
  %p= @tracked_domain.description
  %p= @tracked_domain.url
  %p= @tracked_domain.verification_code

  %br

  - if @tracked_domain.verified == false
    = link_to "Check Verification", verification_path(@tracked_domain), method: :put
  - else 
    = link_to "View Events", tracked_domain_events_path(@tracked_domain), class: 'btn btn-default btn-sm'
  = link_to "Edit ", edit_tracked_domain_path(@tracked_domain), class: 'btn btn-success btn-sm'
  = link_to "Delete ", @tracked_domain, method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: 'Are you sure you want to delete this tracked_domain?'}


  %hr
  -if @tracked_domain.verified?
    .badge.badge-info
      This is a verified tracked domain.

        
